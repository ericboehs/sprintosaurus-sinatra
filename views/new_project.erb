<% content_for(:title) do %>
  <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight dark:text-gray-200">Add Project</h1>
<% end %>
<% content_for(:subtitle) do %>
  <p class="mt-1 text-sm leading-6 text-gray-600 dark:text-gray-200">Enter the URL for the GitHub Project you would like to start tracking.</p>
<% end %>

<form action="/projects" method="post">
  <div class="space-y-6">
    <div class="border-b border-gray-200 pb-6 dark:border-gray-700">
      <label for="url" class="block text-sm font-medium leading-6 text-gray-900 dark:text-gray-200">URL</label>
      <div class="mt-2">
        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 sm:max-w-xl dark:ring-gray-700">
          <input required type="text" name="url" id="url" pattern="^(https?:\/\/)?(www\.)?github\.com\/orgs\/[^\/]+\/projects\/\d+$" autofocus="autofocus" autocomplete="url" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 dark:bg-gray-800 dark:text-gray-200 dark:placeholder:text-gray-600" placeholder="https://github.com/orgs/dep.../projects/123">
        </div>
      </div>

      <div class="rounded-md bg-yellow-50 p-4 mt-9 dark:bg-yellow-950">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400 dark:text-yellow-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Initial Import Notice</h3>
            <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
              <p>Existing Sprints will not show when an Issue was added to the Sprint. Sprints created after initial import are unaffected.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center gap-x-6 justify-end">
    <a href="/" class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-200 hover:underline">Cancel</a>
    <button type="submit" data-disable-with="Saving..." class="rounded-md bg-lime-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-lime-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600 dark:text-gray-100 dark:bg-lime-800 dark:hover:bg-lime-700 dark:focus-visible:outline-lime-700">Save</button>
  </div>
</form>

<script nonce="<%= csp_nonce %>">
  document.querySelector('form').addEventListener('submit', function() {
    var submitButton = this.querySelector('button[data-disable-with]');
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.dataset.originalText = submitButton.innerText;
      submitButton.innerText = submitButton.dataset.disableWith;
      submitButton.classList.add('opacity-50', 'cursor-not-allowed');
    }
  });
</script>
